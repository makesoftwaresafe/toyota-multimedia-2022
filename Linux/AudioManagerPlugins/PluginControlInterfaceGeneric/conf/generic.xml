        <systemProperty>
            <type>SYP_GLOBAL_LOG_THRESHOLD</type>
            <value>4</value>
        </systemProperty>
        <systemProperty>
            <type>SYP_REGISTRATION_ALLOW_UNKNOWN_ELEMENT</type>
            <value>1</value>
        </systemProperty>
